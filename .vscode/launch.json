    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678,
              }
        },
        {
            "name": "LLDB: Attach",
            "type": "lldb",
            "request": "attach",
            "program": "C:/Program Files/Python39/python",
            "pid": "${command:pickProcess}",
        },
        {
            "name": "Debug",
            "type": "lldb",
            "request": "launch",
            "program": "C:/Program Files/Python39/python",
            "args": ["${workspaceFolder}/app/debug.py"],
            "cwd": "${workspaceFolder}/app",
        },
        {
            "name": "Rust Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/maptoolslib/target/debug/maptools",
            "cwd": "${workspaceFolder}",
        },
    ]
}